<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Noa.PocketUi.Main.Views.Configure"
             xmlns:viewmodels="clr-namespace:Noa.PocketUi.Main.ViewModels"
             x:DataType="viewmodels:ConfigureViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Configure Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
            Text="Network Configurator"
            FontAttributes="Bold"
            Command="{Binding GoToNetworkConfiguratorCommand}"/>
    </VerticalStackLayout>
</ContentPage>