<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Noa.PocketUi.Main.Views.Configure"
             xmlns:viewmodels="clr-namespace:Noa.PocketUi.Main.ViewModels"
             x:DataType="viewmodels:ConfigureViewModel">
    <VerticalStackLayout Padding="20">

        <VerticalStackLayout Margin="0,0,0,200">
            <Label 
            Text="Configure"
            FontSize="30"
            FontAttributes="Bold"
            VerticalOptions="Center" 
                HorizontalOptions="Center"/>

        </VerticalStackLayout>

        <Button 
            Text="Network Configurator"
            FontAttributes="Bold"
            CornerRadius="0"
            Command="{Binding GoToNetworkConfiguratorCommand}"/>
    </VerticalStackLayout>
</ContentPage>